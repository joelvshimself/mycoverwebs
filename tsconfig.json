{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".next", "build"]
}
